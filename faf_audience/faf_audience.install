<?php

/**
 * Implementation of hook_install().
 */
function audience_install() {
  drupal_install_schema('audience');
}

/**
 * Implementation of hook_uninstall().
 */
function audience_uninstall() {
  drupal_uninstall_schema('audience');
}

/**
 * Implementation of hook_schema().
 *
 * Contains ctools exportable definitions.
 */
