<?php

/**
 * Implementation of hook_install().
 */
function audience_bundle_install() {
  drupal_install_schema('audience_bundle');
}

/**
 * Implementation of hook_uninstall().
 */
function audience_bundle_uninstall() {
  drupal_uninstall_schema('audience_bundle');
}

